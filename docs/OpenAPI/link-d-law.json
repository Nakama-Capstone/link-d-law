{
    "openapi": "3.0.3",
    "info": {
        "title": "Link D Law",
        "version": "1.0",
        "description": "OpenAPI for Link D Law",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "contact": {
            "email": "nakamacapstone@gmail.com"
        }
    },
    "security": [],
    "servers": [
        {
            "description": "Link D Law RESTful API Server",
            "url": "http://{environtment}",
            "variables": {
                "environtment": {
                    "description": "Server Environtment",
                    "default": "localhost:8000",
                    "enum": [
                        "localhost:8000",
                        "link-d-law.com"
                    ]
                }
            }
        }  
    ],
    "externalDocs": {
        "description": "Word Docs",
        "url": "https://drive.google.com/drive/folders/0ALMAl_AcL8xoUk9PVA"
    },
    "paths": {
        "/v1/auth/login": {
            "post": {
                "operationId": "login",
                "tags": [
                    "Auth"
                ],
                "summary": "Login",
                "description": "Login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/login"
                            },
                            "example": {
                                "email": "user1@mail.com",
                                "password": "password"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthLogin"
                    },
                    "400": {
                        "$ref": "#/components/responses/AuthLogin400"
                    }
                }
            }
        },
        "/v1/auth/register": {
            "post": {
                "operationId": "register",
                "summary": "Register to Apps",
                "description": "Melakukan pendaftaran ke aplikasi",
                "tags": ["Auth"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/register"
                            },
                            "examples": {
                                "user": {
                                    "description": "Example user register",
                                    "value": {
                                        "name": "user",
                                        "email": "user@mail.com",
                                        "password": "password",
                                        "password_confirmation": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthRegister"
                    },
                    "400": {
                        "$ref": "#/components/responses/AuthRegister400"
                    }
                }
            }
        },
        "/v1/auth/logout": {
            "post": {
                "operationId": "logout",
                "summary": "Logout from Apps",
                "description": "Logout dari aplikasi",
                "tags": ["Auth"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthLogout"
                    },
                    "400": {
                        "$ref": "#/components/responses/AuthLogout400"
                    }
                }
            }
        },
        "/v1/auth/refresh": {
            "post": {
                "operationId": "refresh",
                "summary": "Refresh Token",
                "description": "Mengambil token baru",
                "tags": ["Auth"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthRefresh"
                    },
                    "400": {
                        "$ref": "#/components/responses/AuthRefresh400"
                    }
                }
            }
        },
        "/v1/laws": {
            "get": {
                "summary": "Get all laws",
                "description": "Get all laws",
                "tags": ["Law"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/getLaws"
                    },
                    "400": {
                        "$ref": "#/components/responses/getLaws400"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "JWT Token"
            }
        },
        "schemas": {
            "ResponseSuccess": {
                "type": "object",
                "properties": {
                    "ok": {
                        "type": "boolean",
                        "description": "Status",
                        "default": true,
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "description": "Message",
                        "default": "Success"
                    },
                    "data": {
                        "type": "object",
                        "description": "Data",
                        "nullable": true
                    }
                }
            },
            "ResponseError": {
                "type": "object",
                "properties": {
                    "ok": {
                        "type": "boolean",
                        "description": "Status",
                        "default": true,
                        "example": false
                    },
                    "message": {
                        "type": "string",
                        "description": "Message",
                        "default": "Failed"
                    },
                    "errors": {
                        "type": "array",
                        "description": "Errors",
                        "items": {
                            "type": "object",
                            "properties": {
                                "field": {
                                    "type": "string",
                                    "description": "Field",
                                    "nullable": true
                                },
                                "message": {
                                    "type": "string",
                                    "description": "Message"
                                }
                            }
                        }
                    },
                    "data": {
                        "type": "object",
                        "description": "Data",
                        "nullable": true
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User Email"
                    },
                    "password": {
                        "type": "string",
                        "description": "User Password"
                    }
                }
            },
            "register": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "email": {
                        "type": "string",
                        "minLength": 10
                    },
                    "password": {
                        "type": "string",
                        "minLength": 8
                    },
                    "password_confirmation": {
                        "type": "string",
                        "minLength": 8
                    }
                }
            },
            "law": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of law",
                        "example": "KUH Perdata"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of law",
                        "example": "Kitab Undang-Undang Hukum Perdata"
                    },
                    "totalPasal": {
                        "type": "number",
                        "description": "total of pasal",
                        "example": 1993
                    },
                    "image": {
                        "type": "string",
                        "description": "link to image",
                        "example": "google.com"
                    }
                }
            }
        },
        "responses": {
            "AuthLogin": {
                "description": "Login Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess",
                            "data": {
                                "type": "object",
                                "properties": {
                                    "access_token": {
                                        "type": "string",
                                        "description": "Access Token"
                                    },
                                    "refresh_token": {
                                        "type": "string",
                                        "description": "Refresh Token"
                                    }
                                }
                            }
                        },
                        "example": {
                            "ok": true,
                            "message": "login success",
                            "data": {
                                "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9",
                                "refresh_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                            }
                        }
                    }
                }
            },
            "AuthLogin400": {
                "description": "Login Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "login failed",
                            "errors": [
                                {
                                    "field": "email",
                                    "message": "email is required"
                                },
                                {
                                    "message": "email or Password is wrong"
                                }
                            ]
                        }
                    }
                }
            },
            "AuthRegister": {
                "description": "Register Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess"
                        },
                        "example": {
                            "ok": true,
                            "message": "register success"
                        }
                    }
                }
            },
            "AuthRegister400": {
                "description": "Register Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "register failed",
                            "errors": [
                                {
                                    "field": "email",
                                    "message": "email is required"
                                },
                                {
                                    "field": "password",
                                    "message": "password and password confirmation not match"
                                }
                            ]
                        }
                    }
                }
            },
            "AuthLogout": {
                "description": "Logout Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess"
                        },
                        "example": {
                            "ok": true,
                            "message": "token revoked"
                        }
                    }
                }
            },
            "AuthLogout400": {
                "description": "Logout Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "logout failed"
                        }
                    }
                }
            },
            "AuthRefresh": {
                "description": "Logout Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess"
                        },
                        "example": {
                            "ok": true,
                            "message": "token refreshed"
                        }
                    }
                }
            },
            "AuthRefresh400": {
                "description": "Refresh Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "refresh failed"
                        }
                    }
                }
            },
            "getLaws": {
                "description": "Success get all laws",
                "content": {
                    "application/json": {
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/ResponseSuccess"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/law"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "getLaws400": {
                "description": "Register Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "failed get all laws"
                        }
                    }
                }
            }
        }
    }
}