{
    "openapi": "3.0.3",
    "info": {
        "title": "Link D Law",
        "version": "1.0",
        "description": "OpenAPI for Link D Law",
        "contact": {
            "email": "nakamacapstone@gmail.com"
        }
    },
    "servers": [
        {
            "description": "Link D Law RESTful API Server",
            "url": "http://{environtment}/",
            "variables": {
                "environtment": {
                    "description": "Server Environtment",
                    "default": "localhost:8000",
                    "enum": [
                        "localhost:8000",
                        "link-d-law.com"
                    ]
                }
            }
        }  
    ],
    "externalDocs": {
        "description": "Word Docs",
        "url": "https://drive.google.com/drive/folders/0ALMAl_AcL8xoUk9PVA"
    },
    "paths": {
        "/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login",
                "description": "Login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/login"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthLogin"
                    },
                    "400": {
                        "$ref": "#/components/responses/AuthLogin400"
                    }
                }
            }
        },
        "/v1/auth/register": {
            "post": {
                "summary": "Register to Apps",
                "description": "Melakukan pendaftaran ke aplikasi",
                "tags": ["Auth"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/register"
                            },
                            "examples": {
                                "user": {
                                    "description": "Example user register",
                                    "value": {
                                        "name": "user",
                                        "email": "user@mail.com",
                                        "password": "password",
                                        "password_confirmation": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthRegister"
                    },
                    "400": {
                        "$ref": "#/components/responses/AuthRegister400"
                    }
                }
            }
        },
        "/v1/auth/logout": {
            "post": {
                "summary": "Logout from Apps",
                "description": "Logout dari aplikasi",
                "tags": ["Auth"],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthLogout"
                    }
                }
            }
        },
        "/v1/auth/refresh": {
            "post": {
                "summary": "Refresh Token",
                "description": "Mengambil token baru",
                "tags": ["Auth"],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthRefresh"
                    }
                }
            }
        },
        "/v1/laws": {
            "get": {
                "tags": ["Law"]
            }
        },
        "/v1/laws/{law}": {
            "get": {
                "tags": ["Law"]
            }
        },
        "/v1/laws/{law}/{pasal}": {
            "get": {
                "tags": ["Law"]
            }
        },
        "/v1/chats": {
            "get": {
                "tags": ["Chat"]
            }
        },
        "/v1/chats/{id}": {
            "get": {
                "tags": ["Chat"]
            },
            "post": {
                "tags": ["Chat"]
            }
        },
        "/v1/lawyers": {
            "get": {
                "tags": ["Lawyer"]
            }
        },
        "/v1/lawyers/{id}": {
            "get": {
                "tags": ["Lawyer"]
            }
        },
        "/v1/profile": {
            "get": {
                "tags": ["Profile"]
            },
            "post": {
                "tags": ["Profile"]
            }
        },
        "/v1/mainFitur": {
            "get": {
                "tags": ["Main"]
            },
            "post": {
                "tags": ["Main"]
            }
        },
        "/v1/home": {
            "get": {}
        }
    },
    "components": {
        "schemas": {
            "ResponseSuccess": {
                "type": "object",
                "properties": {
                    "ok": {
                        "type": "boolean",
                        "description": "Status",
                        "default": true,
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "description": "Message",
                        "default": "Success"
                    },
                    "data": {
                        "type": "object",
                        "description": "Data",
                        "nullable": true
                    }
                }
            },
            "ResponseError": {
                "type": "object",
                "properties": {
                    "ok": {
                        "type": "boolean",
                        "description": "Status",
                        "default": true,
                        "example": false
                    },
                    "message": {
                        "type": "string",
                        "description": "Message",
                        "default": "Failed"
                    },
                    "errors": {
                        "type": "array",
                        "description": "Errors",
                        "items": {
                            "type": "object",
                            "properties": {
                                "field": {
                                    "type": "string",
                                    "description": "Field",
                                    "nullable": true
                                },
                                "message": {
                                    "type": "string",
                                    "description": "Message"
                                }
                            }
                        }
                    },
                    "data": {
                        "type": "object",
                        "description": "Data",
                        "nullable": true
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User Email"
                    },
                    "password": {
                        "type": "string",
                        "description": "User Password"
                    }
                }
            },
            "register": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "required": true
                    },
                    "email": {
                        "type": "string",
                        "minLength": 10,
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "minLength": 8,
                        "required": true
                    }
                }
            },
            "responseSchemasLogin": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "status": {
                        "type": "boolean"
                    }
                }
            },
            "responseSchemasRegister": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "status": {
                        "type": "boolean"
                    }
                }
            },
            "responseSchemasLogout": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "status": {
                        "type": "boolean"
                    }
                }
            }
        },
        "responses": {
            "AuthLogin": {
                "description": "Login Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess",
                            "data": {
                                "type": "object",
                                "properties": {
                                    "access_token": {
                                        "type": "string",
                                        "description": "Access Token"
                                    },
                                    "refresh_token": {
                                        "type": "string",
                                        "description": "Refresh Token"
                                    }
                                }
                            }
                        },
                        "example": {
                            "ok": true,
                            "message": "login success",
                            "data": {
                                "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9",
                                "refresh_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                            }
                        }
                    }
                }
            },
            "AuthLogin400": {
                "description": "Login Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "login failed",
                            "errors": [
                                {
                                    "field": "email",
                                    "message": "email is required"
                                },
                                {
                                    "message": "email or Password is wrong"
                                }
                            ]
                        }
                    }
                }
            },
            "AuthRegister": {
                "description": "Register Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess"
                        },
                        "example": {
                            "ok": true,
                            "message": "register success"
                        }
                    }
                }
            },
            "AuthRegister400": {
                "description": "Register Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseError"
                        },
                        "example": {
                            "ok": false,
                            "message": "register failed",
                            "errors": [
                                {
                                    "field": "email",
                                    "message": "email is required"
                                },
                                {
                                    "field": "password",
                                    "message": "password and password confirmation not match"
                                }
                            ]
                        }
                    }
                }
            },
            "AuthLogout": {
                "description": "Logout Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess"
                        },
                        "example": {
                            "ok": true,
                            "message": "token revoked"
                        }
                    }
                }
            },
            "AuthRefresh": {
                "description": "Logout Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ResponseSuccess"
                        },
                        "example": {
                            "ok": true,
                            "message": "token refreshed"
                        }
                    }
                }
            }
        }
    }
}